const log = require('logToConsole');
const sendPixel = require('sendPixel');
const encodeUri = require('encodeUri');
const encodeUriComponent = require('encodeUriComponent');

let queryStr = '';
if (data.payload) queryStr = data.payload.map(function(param){
  return encodeUriComponent(param.key) + '=' + encodeUriComponent(param.value);
}).join('&');

let url = encodeUri(data.endpoint);
if (queryStr.length) url = url + '?' + queryStr;
sendPixel(url, onSuccess, onFailure);

function onSuccess() {
  log('Running onSuccess');
  data.gtmOnSuccess();
}
function onFailure() {
  log('Running onFailure. Note: even if the request successfully sends, onFailure may run if the server does not return a valid image response.');
  data.gtmOnFailure();
}


